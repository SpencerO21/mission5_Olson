@{
    ViewData["Title"] = "Services";
}


<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form id="hourlyRateForm">
                <div class="form-group">
                    <label for="hours">Enter Number of Hours:</label>
                    <input type="number" class="form-control" id="hours" min="0" step="any" required>
                </div>
                <div class="form-group">
                    <label for="hourlyRate">Hourly Rate:</label>
                    <input type="text" class="form-control" id="hourlyRate" value="$20" readonly>
                </div>
                <button type="button" class="btn btn-primary" id="calculateBtn">Calculate Total</button>
                <div class="form-group">
                    <label for="total">Total:</label>
                    <input type="text" class="form-control" id="total" readonly>
                </div>
            </form>
        </div>
    </div>
</div>